- @paintings.each do |painting|
  .indexing
    %ul{ :class => 'crop' }
      %li= link_to(image_tag(painting.image), painting)
    %ul
      %li
        %strong Title:
        = link_to(painting.title, painting)
    %ul
      %li
        %strong Year:
        = painting.year
    %ul
      %li
        %strong Style:
        = painting.style