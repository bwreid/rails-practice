.wide-color
  .row
    .large-12.columns
      %h3 Login
      = form_tag login_path, remote: true do
        .row
          .large-6.columns
            = text_field_tag 'email', nil, placeholder: 'Username', autofocus: true
          .large-6.columns
            = text_field_tag 'password', nil, placeholder: 'Password'
        .row
          .large-3.columns
            = submit_tag nil, class: 'button small'
          .large-9.columns
            = link_to('Cancel', '#', class: 'button small alert')