= render(:partial => 'shared/errors', :locals => {:error => @user} )

= form_for @user do |f|
  .row
    %fieldset
      %legend Your Account Information
      %br
      .six.columns
        = f.label :name, "Name / Username"
        = f.text_field :name, :autofocus => true
        = f.label :password
        = f.password_field :password
        = f.label :password_confirmation
        = f.password_field :password_confirmation
      .six.columns
        = f.label :image
        = f.text_field :image
        = f.label :twitter, "Twitter"
        = f.text_field :twitter
        = f.label :balance
        = f.number_field :balance
    = f.submit :class => 'button'